#ifndef _GRP_USR_MEM_H_
#define _GRP_USR_MEM_H_

/**** INTERNAL DATA DEFINES *********************************************************************/
#define GRP_CMEM_ID_MAX                 3                       /* Max value on memory pool ID  */
#define GRP_CMEM_BND_VALUE              0                       /* Boundary value               */

/* User use memory pool ID */
#define GRP_CMEM_ID_TEST                1
#define GRP_CMEM_ID_REQ                 2
#define GRP_CMEM_ID_BIG                 3

/* User use memory block size */
#define GRP_CMEM_BSIZE_TEST             2048
#define GRP_CMEM_BSIZE_REQ              128
#define GRP_CMEM_BSIZE_BIG              10000

/* User use memory block number */
#define GRP_CMEM_BNUM_TEST              0/*4*/
#define GRP_CMEM_BNUM_REQ               0/*8*/
#define GRP_CMEM_BNUM_BIG               0/*1*/

#define GRP_CMEM_BNUM_ALL                 GRP_CMEM_BNUM_TEST    \
                                        + GRP_CMEM_BNUM_REQ     \
                                        + GRP_CMEM_BNUM_BIG
/* User use boundary size */
#define GRP_CMEM_BND_TEST               0
#define GRP_CMEM_BND_REQ                0
#define GRP_CMEM_BND_BIG                0

#endif  /* _GRP_USR_MEM_H_ */
